{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "Publish",
         "command": "vsce",
         "dependsOn": "Build",
         "args": ["publish"],
         "group": "none",
         "problemMatcher": []
      },
      {
         "label": "Package",
         "command": "vsce",
         "args": ["package"],
         "group": "none",
         "problemMatcher": []
      },
      {
         "label": "Test",
         "command": "./node_modules/.bin/jest",
         "args": ["--verbose"],
         "presentation": {
            "showReuseMessage": false,
            "clear": true
         },
         "type": "shell",
         "group": "test",
         "problemMatcher": []
      },
      {
         "label": "Build and Watch",
         "command": "./node_modules/.bin/tsc",
         "args": ["-watch", "-p", "tsconfig.json"],
         "type": "shell",
         "presentation": {
            "echo": false,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
         },
         "isBackground": true,
         "problemMatcher": "$tsc-watch"
      },
      {
         "label": "Build",
         "group": "build",
         "command": "./node_modules/.bin/tsc",
         "args": ["-p", "tsconfig.json"],
         "type": "shell",
         "problemMatcher": "$tsc"
      },
      {
         "label": "Install VSCode Typings",
         "group": "none",
         "type": "shell",
         "command": "node",
         "args": ["./node_modules/vscode/bin/install"],
         "problemMatcher": []
      },
      {
         "label": "Install Visual Studio Code Extensions",
         "group": "none",
         "type": "shell",
         "command": "yarn",
         "args": ["global", "add", "vsce"],
         "problemMatcher": []
      }
   ]
}
